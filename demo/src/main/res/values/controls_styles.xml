<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="Controls" />

  <style name="Controls.SeekBar">
    <item name="android:focusable">true</item>
    <item name="android:indeterminateDrawable">@drawable/progress</item>
    <item name="android:indeterminateOnly">false</item>
    <item name="android:maxHeight">@dimen/seekbar_height</item>
    <item name="android:minHeight">@dimen/seekbar_height</item>
    <item name="android:progressDrawable">@drawable/progress</item>
    <item name="android:thumb">@drawable/thumb</item>
    <item name="android:thumbOffset">@dimen/seekbar_thumb_offset</item>
    <item name="android:mirrorForRtl" tools:ignore="NewApi">true</item> <!-- Only needed on API 18+ -->
  </style>

</resources>
